<h4> Incrições em andamento: </h4>

<ul>
 <% @applies.each do |apply| %>
    <% if apply.eligible? %>
      <li>
        <%= link_to apply.job.title, apply.job %> 
      </li>
    <% end %>
    
<% end %>
 </ul>

<h4>Inscrições Rejeitadas:</h4>
<ul>
 <% @applies.each do |apply| %>
    <% if apply.rejected? %>
      <li>
       <strong> <%= apply.job.title  %> </strong> <br>
        <strong>Feedback: </strong> <br>
        <%= apply.feedback.body  %> 
     </li>
    <% end %>
 <% end %>
 </ul>

<h4> Incrições com propostas: </h4>

<ul>
 <% @applies.each do |apply| %>
    <% if apply.accepted? %>
      <li>
        <%= link_to apply.job.title, apply.proposal %> 
      </li>
    <% end %>
    
<% end %>
 </ul>

<%= link_to 'Voltar', :back %>

