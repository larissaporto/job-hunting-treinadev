<%= image_tag @profile.photo if @profile.photo.attached?%>

<% if @profile.social_name.present? %>
   <h1>Perfil de <%= @profile.social_name %> </h1>
<% else %>
   <h1>Perfil de <%= @profile.name %> </h1>
<% end %>

<dl>
    <dt> Data de Nascimento: </dt>
    <dd> <%= l @profile.birth_date if @profile.birth_date.present?%> </dd>
    <dt> Descrição: </dt>
    <dd> <%= @profile.description %> </dd>
    <dt> Experiência: </dt>
    <dd> <%= @profile.experience %> </dd>
    <dt> Formação </dt>
    <dd> <%= @profile.qualification %> </dd>
</dl>

<h3>Comentários</h3>
<%= render @profile.comments %>

<h3>Adicionar Comentários</h3>
<%= render partial: 'comments/form' %>

<%= link_to 'Editar Perfil', edit_profile_path(@profile) %>
<%= link_to 'Voltar', :back %>
